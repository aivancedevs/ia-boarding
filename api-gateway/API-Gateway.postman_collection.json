    },
    "auth": {
      "type": "bearer",
      "bearer": [
        {
          "key": "token",
          "value": "{{authToken}}",
          "type": "string"
        }
      ]
    },
    "variable": [
      {
        "key": "baseUrl",
        "value": "http://localhost:4000",
        "type": "string"
      },
      {
        "key": "authToken",
        "value": "",
        "type": "string"
      }
    ],
    "item": [
      {
        "name": "Health & Info",
        "item": [
          {
            "name": "Root - Welcome",
            "request": {
              "method": "GET",
              "header": [],
              "url": {
                "raw": "{{baseUrl}}/",
                "host": ["{{baseUrl}}"],
                "path": [""]
              }
            },
            "response": []
          },
          {
            "name": "Health Check",
            "request": {
              "method": "GET",
              "header": [],
