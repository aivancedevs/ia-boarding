{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway para enrutar y gestionar microservicios",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "docker:build": "docker build -t api-gateway .",
    "docker:run": "docker run -p 3000:3000 --env-file .env api-gateway"
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "winston": "^3.11.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
